<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link href="http://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css" rel="stylesheet">

    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.4.5/angular.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/angular-ui-router/0.2.15/angular-ui-router.js"></script>
    <script src="/javascripts/angularApp.js"></script>
  </head>
  <body ng-app='morbo'>
    <nav class="navbar navbar-default pull-right">
      <ul class="nav navbar-nav">
        <li><a href="#/home">Home</a></li>
        <li ng-show="isLoggedIn()"><a>{{ currentUser() }}</a></li>
        <li ng-show="isLoggedIn()"><a href="" ng-click="logOut()">Log Out</a></li>
        <li ng-hide="isLoggedIn()"><a href="/#/login">Log In</a></li>
        <li ng-hide="isLoggedIn()"><a href="/#/register">Register</a></li>
      </ul>
    </nav>
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <ui-view></ui-view>
      </div>
    </div>
    <script type="text/ng-template" id="/home.html">
      <div class="page-header">
        <h1>Blanks</h1>
      </div>
      <a href="#" ng-model="collapsedFill" ng-click="collapsedFill=!collapsedFill">Click here to <strong>Add a new Blank</strong></a>

      <div ng-show="collapsedFill">
        <form ng-submit="addBlank()"
        style="margin-top:30px;">
          <div class="form-group">
            <input type="text" class="form-control" placeholder="Enter a phrase..." ng-model="blankBody"></input>
          </div>
          <button type="submit" class="btn btn-primary">Add</button>
        </form>
      </div>
      <hr />
      <div ng-repeat="blank in blanks">
        {{blank.body}} - {{blank.author}} - Total Plays: {{blank.plays}}
      </div>
      <div ng
      <div class="page-header">
        <h1>Fills</h1>
      </div><a href="#" ng-model="collapsed" ng-click="collapsed=!collapsed">Click here to <strong>Add a new Fill</strong></a>

      <div ng-show="collapsed">
        <form ng-submit="addFill()"
        style="margin-top:30px;">
          <div class="form-group">
            <input type="text" class="form-control" placeholder="Enter a word..." ng-model="fillBody"></input>
          </div>
          <button type="submit" class="btn btn-primary">Add</button>
        </form>
      </div>
      <hr />
      <div ng-repeat="fill in fills">
        {{fill.body}} - {{fill.author}} - Total Plays: {{fill.plays}}
      </div>
    </script>
  </body>
</html>
